<?xml version="1.0" encoding="UTF-8"?>
<manifest package="com.tasktestingsapplication.app" xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" android:largeHeap="true"
        android:name="com.tasktestingsapplication.app.appcomponents.di.MyApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true" android:theme="@style/Theme.MyApp" android:usesCleartextTraffic="true">
        <activity
            android:name="com.tasktestingsapplication.app.modules.appnavigation.ui.AppNavigationActivity" android:screenOrientation="portrait"/>
        <activity
            android:name="com.tasktestingsapplication.app.modules.forgotpasswordverification.ui.ForgotPasswordVerificationActivity" android:screenOrientation="portrait"/>
        <activity
            android:name="com.tasktestingsapplication.app.modules.register.ui.RegisterActivity" android:screenOrientation="portrait"/>
        <activity
            android:name="com.tasktestingsapplication.app.modules.welcomepage.ui.WelcomePageActivity" android:screenOrientation="portrait"/>
        <activity android:exported="true"
            android:name="com.tasktestingsapplication.app.modules.forgotpasswordentercode.ui.ForgotPasswordEnterCodeActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.tasktestingsapplication.app.modules.dashboard.ui.DashboardActivity" android:screenOrientation="portrait"/>
        <activity
            android:name="com.tasktestingsapplication.app.modules.forgotpassword.ui.ForgotPasswordActivity" android:screenOrientation="portrait"/>
        <activity
            android:name="com.tasktestingsapplication.app.modules.login.ui.LoginActivity" android:screenOrientation="portrait"/>
        <activity
            android:name="com.tasktestingsapplication.app.modules.registerverification.ui.RegisterVerificationActivity" android:screenOrientation="portrait"/>
    </application>
</manifest>
